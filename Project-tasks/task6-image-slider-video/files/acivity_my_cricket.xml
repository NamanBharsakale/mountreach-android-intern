<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyCricketActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EPIC VERSE"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="#ACE1F8"
                android:layout_marginTop="40dp"
                app:cardElevation="4dp">

                <com.denzcoskun.imageslider.ImageSlider
                        android:layout_width ="match_parent"
                        android:layout_height="match_parent"
                        android:id = "@+id/CricSlider"
                        app:iss_auto_cycle="true"
                        app:iss_period="2000"
                        app:iss_delay="2000"
                        app:iss_text_align="CENTER"
                        app:iss_text_color="@color/black"
                        app:no_dots="false"
                        app:iss_selected_dot="@drawable/default_selected_dot"
                         app:iss_unselected_dot="@drawable/default_unselected_dot"/>
            </androidx.cardview.widget.CardView>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="World Cup Final" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                >

                <VideoView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/crickVideo3"
                    android:scaleType="centerCrop" />

            </FrameLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp"
                app:cardCornerRadius="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IND VS SA WT20 2024"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Team of Dreams "
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="35dp" />


            </androidx.cardview.widget.CardView>


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:lottie_rawRes="@raw/cric_anim"
                app:lottie_autoPlay="true"
                android:layout_marginTop="55dp"
                app:lottie_loop="true"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Popular Highlights" />



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                >
                <VideoView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/crickVideo1"
                    android:scaleType="centerCrop" />
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp"
                app:cardCornerRadius="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IND VS AUS WT20 2016"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="King's Magical 82*"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="35dp" />


            </androidx.cardview.widget.CardView>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginTop="70dp"
                >

                <VideoView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/crickVideo2"
                    android:scaleType="centerCrop" />

            </FrameLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp"
                app:cardCornerRadius="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IND VS AUS WT20 2024"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HitMan's astonishing 92*"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="35dp" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

